<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAD2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/above_appin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="53dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/schzon" />

        <Button
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="115dp"
            android:background="@drawable/scout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btnAllOn"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/no_park2" />

        <Button
            android:id="@+id/btnAllOff"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/pers" />

        <Button
            android:id="@+id/b1"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/drive" />

        <!--GREEN OFF -->
        <!--RED ON -->
        <!--RED OFF -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/b4"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="100dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bluetooth" />

        <Button
            android:id="@+id/b6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/off" />

        <!--YELLOW ON -->

        <!--YELLOW OFF -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수신 데이터: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/receiveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/selectBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#EBCEA5"
        android:text="아래에서 페어링된 블루투스 장치를 선택하세요! "
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="470dp"
        android:layout_height="262dp"
        android:text="received data">

    </ListView>


</LinearLayout>